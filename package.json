  "bugs": {
    "url": "https://github.com/ujjwalguptaofficial/mahal-router/issues"
  },
  "homepage": "https://github.com/ujjwalguptaofficial/mahal-router#readme",
  "devDependencies": {
    "@types/node": "^14.14.35",
    "mahal": "^0.22.0",
    "ts-loader": "^8.0.17",
    "typescript": "^4.2.2",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  },
  "dependencies": {
    "webpack-node-externals": "^2.5.2"
  }
