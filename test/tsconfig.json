{
    "compilerOptions": {
        "baseUrl": "",
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es6",
            "dom"
        ],
        "mapRoot": "./",
        "module": "ES2020",
        "outDir": "bin/ts",
        "sourceMap": true,
        "target": "es5",
        "moduleResolution": "node",
        "paths": {
            "~/*": [
                "./*"
            ],
            "@/*": [
                "./src/*"
            ],
            "@components/*": [
                "./src/components/*"
            ],
            "@config/*": [
                "./config/*"
            ]
        }
    },
}